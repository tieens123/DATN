@model K21CNT2_2110900086_DATN.Models.Blog

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center mt-4">Thêm Blog mới</h2>

<div class="container">
    <div class="card shadow-sm mt-3">
        <div class="card-body">
            <form asp-controller="AdminBlogs" asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <!-- Tên blog -->
                <div class="form-group">
                    <label for="BlogName" class="font-weight-bold">Tên blog</label>
                    <input type="text" class="form-control" asp-for="BlogName" required placeholder="Nhập tên blog...">
                    <span asp-validation-for="BlogName" class="text-danger"></span>
                </div>

                <!-- Tiêu đề blog -->
                <div class="form-group">
                    <label for="Title" class="font-weight-bold">Tiêu đề blog</label>
                    <textarea class="form-control" asp-for="Title" rows="4" required placeholder="Nhập tiêu đề..."></textarea>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <!-- Tên tác giả blog -->
                <div class="form-group">
                    <label for="Author" class="font-weight-bold">Tên tác giả blog</label>
                    <input type="text" class="form-control" asp-for="Author" required placeholder="Nhập tên tác giả blog...">
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <!-- Ảnh đại diện -->
                <div class="form-group">
                    <label for="fImage" class="font-weight-bold">Ảnh đại diện</label>
                    <input type="file" class="form-control-file" name="fImage" accept="image/*">
                </div>

                <!-- Mô tả blog -->
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Mô tả blog</label>
                    <textarea asp-for="Description" class="form-control" id="summernote"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Lưu sản phẩm</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Thêm Summernote -->
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs5.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs5.min.css" rel="stylesheet">

    <script>
        $(document).ready(function() {
            $('#summernote').summernote({
                placeholder: 'Nhập nội dung bài viết...',
                tabsize: 2,
                height: 300
            });
        });
    </script>
}
