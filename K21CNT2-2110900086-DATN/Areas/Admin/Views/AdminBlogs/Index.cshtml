@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<K21CNT2_2110900086_DATN.Models.Blog>
@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Danh sách Blog" + ViewBag.CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="page-header">
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="Home" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <span class="breadcrumb-item active">Danh sách blog</span>
            </nav>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row m-b-30">
                <div class="col-lg-4 ">
                    <a class="btn btn-primary" asp-controller="AdminBlogs" asp-action="Create">
                        <i class="anticon anticon-plus-circle m-r-5"></i>
                        <span>Thêm Blog </span>
                    </a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover e-commerce-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên blog</th>
                            <th>Tiêu đề blog</th>
                            <th>Ảnh blog</th>
                            <th>Tác giả</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.BlogId</td>
                                    <td> @item.BlogName </td>
                                    <td>@item.Title</td>
                                    <td>@item.Image</td>
                                    <td>@item.Author</td>
                                    <td>
                                        <a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminBlogs" asp-action="Details" asp-route-id="@item.BlogId">Xem</a>
                                        <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminBlogs" asp-action="Edit" asp-route-id="@item.BlogId">Sửa</a>
                                        <a class="btn btn-success btn-tone m-r-5" asp-area="Admin" asp-controller="AdminBlogs" asp-action="Delete" asp-route-id="@item.BlogId">Xóa</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <div aria-label="Page navigation example">
                    <ul class="pagination">
                        <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="AdminBlogs" asp-action="Index" />
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
