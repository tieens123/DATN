@model K21CNT2_2110900086_DATN.Models.Blog

@{
    ViewData["Title"] = "Chỉnh sửa blog";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<h2 class="text-center mt-4">Sửa blog</h2>

<div class="container">
    <div class="card shadow-sm mt-3">
        <div class="card-body">
            <form asp-controller="AdminBlogs" asp-action="Edit" asp-route-id="@Model.BlogId" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="BlogId" />
                @* <input type="hidden" asp-for="Image" />  *@
                <!-- Tên blog -->
                <div class="form-group">
                    <label for="BlogName" class="font-weight-bold">Tên của blog</label>
                    <input type="text" class="form-control" asp-for="BlogName">
                    <span asp-validation-for="BlogName" class="text-danger"></span>
                </div>

                <!-- Tiêu đề blog -->
                <div class="form-group">
                    <label for="Title" class="font-weight-bold">Tiêu đề blog</label>
                    <textarea class="form-control" asp-for="Title"> </textarea>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- Tên tác giả blog -->
                <div class="form-group">
                    <label for="Author" class="font-weight-bold">Tên tác giả blog</label>
                    <input type="text" class="form-control" asp-for="Author">
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>

                <!-- Ảnh đại diện -->
                <div class="form-group">
                    <label for="fImage" class="font-weight-bold">Ảnh đại diện</label>
                    <input type="file" class="form-control-file" name="fImage" accept="image/*">
                </div>

                <!-- Mô tả blog -->
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Mô tả blog</label>
                    <textarea asp-for="Description" class="form-control" id="summernote"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Lưu blog</button>
                </div>
            </form>
        </div>
    </div>
</div>



