@model K21CNT2_2110900086_DATN.Models.Product

@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Điều chỉnh để tạo khoảng cách với menu ,bị menu che mất*/
    .card {
        margin-top: 10px;
    }

    .page-header {
        margin-top: 80px;
    }
</style>
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminProducts" asp-action="Index">Danh sách sản phẩm</a>
            <span class="breadcrumb-item active">Xóa sản phẩm</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title"> Sản phẩm:@Model.ProductName</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>Mã ID</td>
                        <td class="text-dark font-weight-semibold">@Model.ProductId</td>
                    </tr>
                    <tr>
                        <td>Tên sản phẩm</td>
                        <td>@Model.ProductName</td>
                    </tr>
                    <tr>
                        <td>Giá sản phẩm</td>
                        <td>@Model.ProductName</td>
                    </tr>
                    <tr>
                        <td>Số lượng tồn kho</td>
                        <td>@Model.UnitsInStock</td>
                    </tr>
                    <tr>
                        <td>Danh mục sản phẩm</td>
                        <td>@Model.Category.CategoryName</td>
                    </tr>
                    <tr>
                        <td>Ảnh sản phẩm</td>
                        <td>
                            <img width="200" height="200" src="~/images/products/@Model.Image" alt="@Model.ProductName" />
                        </td>
                    </tr>
                    <tr>
                        <td>Mô tả sản phẩm</td>
                        <td>@Model.Description</td>
                    </tr>
                    <tr>
                        <td>Xác nhận xóa :</td>
                        <td>
                            <form asp-controller="AdminProducts" asp-action="Delete" asp-route-id="@Model.ProductId">
                                <input type="hidden" asp-for="ProductId" />
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </form>
                        </td>

                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

