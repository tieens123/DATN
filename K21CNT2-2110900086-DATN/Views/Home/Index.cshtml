<!-- Begin Blog Area -->

<main class="main-content">
    <div class="blog-area blog-column-2 section-space-y-axis-100">
        <div class="container">
            <h2 class="text-center mb-4">BÀI VIẾT MỚI NHẤT</h2>
            <div class="row">
                @if (ViewBag.Blogs != null && ViewBag.Blogs.Count > 0)
                {
                    foreach (var item in ViewBag.Blogs)
                    {
                        <div class="col-md-6">
                            <div class="blog-item">
                                <div class="blog-img img-zoom-effect">
                                    <a asp-route="BlogDetails" asp-route-id="@item.BlogId">
                                        <img class="img-full" src="~/images/blogs/@item.Image" alt="@item.Title">
                                    </a>
                                </div>
                                <div class="blog-content">
                                    <h5 class="title mb-4">
                                        <a asp-route="BlogDetails" asp-route-id="@item.BlogId">@item.BlogName</a>
                                    </h5>
                                    <p class="short-desc mb-5">@item.Title</p>
                                    <div class="button-wrap">
                                        <a class="btn btn-custom-size lg-size btn-dark rounded-0" asp-route="BlogDetails" asp-route-id="@item.BlogId">Xem thêm</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-center">Chưa có bài viết nào.</p>
                }
            </div>
        </div>
    </div>
</main>
<!-- Blog Area End Here -->
@section Scripts {
    <script>
        $(document).ready(function () {
            $(".quick-add-to-cart").click(function () {
                var productid = $(this).data("product-id"); // Lấy ID sản phẩm
                var soLuong = 1; // Mặc định thêm 1 sản phẩm

                if (!productid) {
                    alert("Sản phẩm không hợp lệ.");
                    return;
                }

                $.ajax({
                    url: '/api/cart/add',
                    type: "POST",
                    dataType: "json",
                    data: {
                        productID: productid,
                        amount: soLuong
                    },
                    success: function (response) {
                        if (response.success) {
                            updateCartUI(); // Cập nhật số lượng hiển thị ngay lập tức
                            showToast("Sản phẩm đã được thêm vào giỏ hàng!");

                            // Đợi 1 giây rồi reload trang
                            setTimeout(function () {
                                location.reload();
                            }, 1000);
                        } else {
                            alert("Không thể thêm sản phẩm vào giỏ hàng.");
                        }
                    },
                    error: function (xhr) {
                        console.error("Lỗi khi thêm sản phẩm vào giỏ hàng:", xhr);
                        alert("Có lỗi xảy ra: " + xhr.responseText);
                    }
                });
            });

            // Cập nhật số sản phẩm trong giỏ hàng mà không cần reload
            function updateCartUI() {
                $("#miniCart").load("/AjaxContent/HeaderCart");
                $("#numberCart").load("/AjaxContent/NumberCart");
            }

            // Hiển thị thông báo nhỏ (toast)
            function showToast(message) {
                var toast = $("<div class='toast-message'>" + message + "</div>");
                $("body").append(toast);
                toast.fadeIn(400).delay(1000).fadeOut(400, function () {
                    $(this).remove();
                });
            }
        });
    </script>
}