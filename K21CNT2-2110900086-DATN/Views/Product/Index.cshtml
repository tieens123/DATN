@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<K21CNT2_2110900086_DATN.Models.Product>



@{
    ViewData["Title"] = "Product Index" + ViewBag.CurrentPage;
    Layout = "~/Views/Shared/_Layout.cshtml";
