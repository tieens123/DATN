            </div>
        </div>
    </div>
    <div class="blog-area blog-column-2 section-space-y-axis-100">
        <div class="container">
            <div class="row">
                @if (Model != null && Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <div class="col-md-6">
                            <div class="blog-item">
                                <div class="blog-img img-zoom-effect">
                                    <a asp-route="BlogDetails" asp-route-id="@item.BlogId">
                                        <img class="img-full" src="~/images/blogs/@item.Image" alt="@item.Title">
                                    </a>
                                </div>
                                <div class="blog-content">
                                    <h5 class="title mb-4">
                                        <a asp-route="BlogDetails" asp-route-id="@item.BlogId">@item.BlogName</a>
                                    </h5>
                                    <p class="short-desc mb-5">@item.Title</p>
                                    <div class="button-wrap">
                                        <a class="btn btn-custom-size lg-size btn-dark rounded-0" asp-route="BlogDetails" asp-route-id="@item.BlogId">>Xem thêm</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
