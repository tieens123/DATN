@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<K21CNT2_2110900086_DATN.Models.Blog>
@{
    ViewData["Title"] = "Blog Index" + ViewBag.CurrentPage;
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<!-- Begin Main Content Area -->
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="/images/anh/blogs1-1.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading" style="color:red">Tin tức</h2>
