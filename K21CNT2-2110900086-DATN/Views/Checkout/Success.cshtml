@{
    ViewData["Title"] = "Dặt hàng thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center mt-5">
    <h2>🎉 Đặt hàng thành công!</h2>
    <p>Cảm ơn <strong>@ViewBag.CustomerName</strong> đã đặt hàng.</p>
    <p>Mã đơn hàng: <strong>#@ViewBag.OrderId</strong></p>
    <p>Tổng số tiền: <strong>@ViewBag.TotalMoney</strong></p>

    <a href="/" class="btn btn-primary mt-3">Về trang chủ</a>
</div>